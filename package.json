{
	"name": "clockify-tray",
	"productName": "clockify tray",
	"version": "0.1.0",
	"description": "A simple tray application for recording clockify sessions.",
	"license": "MIT",
	"repository": "kevinuulong/clockify-tray",
	"author": {
		"name": "Kevin Long",
		"email": "kevin.uu.long@gmail.com",
		"url": "https://kevinuulong.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"@electron/remote": "^1.1.0",
		"canvas-confetti": "^1.4.0",
		"electron-context-menu": "^3.0.0",
		"electron-debug": "^3.2.0",
		"electron-reload": "^1.5.0",
		"electron-store": "^8.0.0",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.8",
		"electron-util": "^0.15.1",
		"node-fetch": "^2.6.1"
	},
	"devDependencies": {
		"electron": "^12.0.6",
		"electron-builder": "^22.10.5",
		"np": "^7.5.0",
		"xo": "^0.39.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.kevinuulong.clockify-tray",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
